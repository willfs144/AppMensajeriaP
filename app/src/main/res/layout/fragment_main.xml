<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/fragment_vertical_margin_top"
    tools:context="co.udistrital.android.thomasmensageria.main.ui.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearObtenerRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageObtenerRuta"
                    android:layout_width="@dimen/icon_menu_width"
                    android:layout_height="@dimen/icon_menu_height"
                    android:layout_above="@+id/imageValidarRuta"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="50dp"
                    android:src="@drawable/obtener_ruta" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/menu.icon.get.route" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearRutaServicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageRutaServicios"
                    android:layout_width="@dimen/icon_menu_width"
                    android:layout_height="@dimen/icon_menu_height"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="50dp"
                    android:src="@drawable/ruta_servicio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/menu.icon.services.route" />/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linearResumenRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageResumenRuta"
                    android:layout_width="@dimen/icon_menu_width"
                    android:layout_height="@dimen/icon_menu_height"
                    android:layout_above="@+id/imageValidarRuta"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="50dp"
                    android:src="@drawable/resumen_ruta" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/menu.icon.summary.route" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearCierreRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCierreRuta"
                    android:layout_width="@dimen/icon_menu_width"
                    android:layout_height="@dimen/icon_menu_height"
                    android:layout_above="@+id/imageRutaServicios"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="50dp"
                    android:src="@drawable/close_route" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/menu.icon.close.route" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
